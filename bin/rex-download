#!/usr/bin/env perl

use Rex::CommandLine;

my $command = "download";

my $r = Rex::CommandLine->new;

my $exit_code = 0;

eval {
   $exit_code = $r->call($command, mod_args => sub {
      my ($key, $val) = @_;
      if($val == 1) {
         return undef;
      }

      return $val;
   });
   1;
} or do {
   print STDERR "$@\n";
   $exit_code = 0;
};


exit ($exit_code == 1 ? 0 : 1);
