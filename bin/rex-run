#!/usr/bin/env perl

use Rex::CommandLine;
use File::Basename;

my $command = "run";

my $r = Rex::CommandLine->new;

my $call_cmd = basename($0);
my ($cmd) = ($call_cmd =~ m/^rex\-(.*)$/);

if($cmd ne "run") {
   unshift @ARGV, $cmd;
}

my $out = $r->call($command, join_argv => " ");

print $out . "\n";

exit $?;
