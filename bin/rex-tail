#!/usr/bin/env perl

use Rex::CommandLine;
use File::Basename;

my $r = Rex::CommandLine->new;

my $call_cmd = basename($0);
my ($cmd) = ($call_cmd =~ m/^rex\-(.*)$/);

unshift @ARGV, $cmd;

my $out = $r->command("run", 1, join(" ", @ARGV), continuous_read => sub {
   my ($in) = @_;
   print $in;
});

exit $?;
